/* components/leo-project/leo-project.wxss */

.project-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 10rpx solid #f5f5f5;
}

.project-picture {
  width: 120rpx;
  height: 220rpx;
}

.project-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  position: relative;
  margin-left: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #2c2c2c;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom {
  position: absolute;
  bottom: 0rpx;
  display: flex;
  width: 100%;
  align-items: center;
}

.collect {
  width: 50rpx;
  height: 50rpx;
}

.niceDate {
  font-size: 20rpx;
  color: #bfbfbf;
  padding-left: 10rpx;
  flex: 1;
}

.author {
  font-size: 20rpx;
  color: #25c6fc;
  border: 1px solid #25c6fc;
  border-radius: 8rpx;
  padding: 5rpx;
}
